<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="266dp"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_margin="16dp"
    android:padding="16dp"
    android:background="@drawable/bg_corner_1c1c1e_16">

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="太阳能偏移"
        android:textColor="@android:color/white"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent"/>

    <!-- 垂直居中辅助线 -->
    <androidx.constraintlayout.widget.Guideline
        android:id="@+id/guideline_vertical"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        app:layout_constraintGuide_percent="0.5" />

    <com.example.myapplication.view.SolarOffsetView
        android:id="@+id/sov1"
        android:layout_width="26dp"
        android:layout_height="146dp"
        android:maxHeight="146dp"
        android:minHeight="2dp"
        android:layout_marginBottom="46dp"
        android:layout_marginEnd="45dp"
        app:layout_constraintEnd_toStartOf="@+id/guideline_vertical"
        app:layout_constraintBottom_toBottomOf="parent"/>

    <com.example.myapplication.view.SolarOffsetView
        android:id="@+id/sov2"
        android:layout_width="26dp"
        android:layout_height="85dp"
        android:maxHeight="146dp"
        android:minHeight="2dp"
        android:layout_marginBottom="46dp"
        android:layout_marginStart="45dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toEndOf="@+id/guideline_vertical"/>

    <View
        android:layout_width="153dp"
        android:layout_height="2dp"
        app:layout_constraintStart_toStartOf="@+id/sov1"
        app:layout_constraintBottom_toTopOf="@+id/sov1"
        android:background="@drawable/solar_offset_line"/>
    
    <TextView
        android:id="@+id/solarValue"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="180%"
        android:textColor="@android:color/white"
        android:textSize="16sp"
        android:layout_marginStart="4dp"
        app:layout_constraintStart_toEndOf="@+id/sov1"
        app:layout_constraintTop_toTopOf="@+id/sov1" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="能量偏移量"
        android:textColor="#FFFFFF"
        android:alpha="0.35"
        android:textSize="12sp"
        app:layout_constraintTop_toBottomOf="@+id/solarValue"
        app:layout_constraintStart_toStartOf="@+id/solarValue"/>

    <TextView
        android:id="@+id/solarTv"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Solar"
        android:textColor="#FFFFFF"
        android:alpha="0.6"
        android:layout_marginTop="6dp"
        app:layout_constraintTop_toBottomOf="@+id/sov1"
        app:layout_constraintStart_toStartOf="@+id/sov1"
        app:layout_constraintEnd_toEndOf="@+id/sov1"/>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="36.35kWh"
        android:textColor="@android:color/white"
        android:textSize="14sp"
        android:layout_marginTop="3dp"
        app:layout_constraintTop_toBottomOf="@id/solarTv"
        app:layout_constraintStart_toStartOf="@+id/sov1"
        app:layout_constraintEnd_toEndOf="@+id/sov1"/>

    <TextView
        android:id="@+id/homeTv"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Home"
        android:textColor="#FFFFFF"
        android:alpha="0.6"
        android:layout_marginTop="6dp"
        app:layout_constraintTop_toBottomOf="@+id/sov2"
        app:layout_constraintStart_toStartOf="@+id/sov2"
        app:layout_constraintEnd_toEndOf="@+id/sov2"/>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="18.62kWh"
        android:textColor="@android:color/white"
        android:textSize="14sp"
        android:layout_marginTop="3dp"
        app:layout_constraintTop_toBottomOf="@id/homeTv"
        app:layout_constraintStart_toStartOf="@+id/sov2"
        app:layout_constraintEnd_toEndOf="@+id/sov2"/>

</androidx.constraintlayout.widget.ConstraintLayout>